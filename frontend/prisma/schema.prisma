datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model JobPosting {
  id            Int      @id @default(autoincrement())
  title         String?  // Optional field
  salary        Float
  timings       String
  location      String
  type          JobType  // Enum for job type
  qualification String
}

enum JobType {
  FULL_TIME
  PART_TIME
}